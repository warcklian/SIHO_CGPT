function ltrim(s) {   
	return s.replace(/^\s+/, "");
}

function rtrim(s) {   
	return s.replace(/\s+$/, "");
}

/* Función que quita espacios en blanco a la derecha de una cadena */
function trim(s) {   
	return rtrim(ltrim(s));
}