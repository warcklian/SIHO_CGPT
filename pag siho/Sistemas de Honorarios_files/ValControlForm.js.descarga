function f_trim(cadena)
{ 
	var pBlanco, uBlanco;
 	pBlanco = /^ */; //espacios en blanco al principio
 	uBlanco = / *$/; // espacios en blanco al final
 	c_1 = new String(cadena);
 	c_1 = c_1.replace(pBlanco,"");
 	c_1 = c_1.replace(uBlanco,"");
 
 	return c_1;
} 